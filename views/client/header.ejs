    <script>
        function onCaptcha(obj){
            var oldsrc = obj.src.split('?')[0];
            obj.src = oldsrc + '?t=' + Math.random();
        }
        $(document).ready(function(){
            $('.CAPTCHA').each(function(i,obj){
                obj.onclick = function(){onCaptcha(obj)};
            });
        });
    </script>

